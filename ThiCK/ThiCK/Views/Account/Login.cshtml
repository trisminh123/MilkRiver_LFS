@model LoginViewModel
@{
	ViewData["Title"] = "Register";
}
<section id="login-section">
    <!--form-->
    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="login-form position-relative">
            <!--login form-->
            <h2>Đăng nhập tài khoản</h2>
            <form asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Username</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>

                <!-- Căn nút đăng nhập góc phải -->
                <div class="text-end position-absolute login-button">
                    <button class="btn btn-default" id="submit" >Đăng nhập</button>
                </div>

                <!-- Link tạo tài khoản -->
                <a class="pull-left" asp-action="ForgetPass" asp-controller="Account" class="text-start d-block mt-3">Quên mật khẩu</a>
                <a class="pull-right" asp-action="Create" asp-controller="Account" class="text-start d-block mt-3">Tạo tài khoản mới</a>
            </form>
        </div>
    </div>
</section>

<style>
    /* Toàn bộ section */
    #login-section {
        height: 100vh; /* Chiều cao toàn màn hình */
        display: flex;
        justify-content: center; /* Căn giữa ngang */
        align-items: center; /* Căn giữa dọc */
        background-color: #f8f9fa; /* Màu nền nhạt */
    }

    .login-form {
        background: #ffffff;
        padding: 40px 30px 80px; /* Tăng không gian trong form */
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        width: 1000px;
        max-width: 400px; /* Chiều rộng tối đa */
        position: relative; /* Đặt thành phần con sử dụng `position` */
    }

    /* Nút đăng nhập */
    .login-button {
        bottom: 10px; /* Tạo khoảng cách giữa nút và cạnh dưới */
        right: 20px;
    }

    

        .btn:hover {
            background-color: #0056b3;
        }

    .position-absolute {
        position: absolute; /* Đặt vị trí tuyệt đối */
    }
</style>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");

	}

}