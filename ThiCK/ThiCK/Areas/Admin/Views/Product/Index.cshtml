@model IEnumerable<ProductModel>
@{
	ViewData["title"] = "Product Listed";
	Paginate pager = new Paginate();
	int pageNo = 0;
	if (ViewBag.Paper != null)
	{
		pager = ViewBag.Pager;
		pageNo = pager.CurrentPage;
	}
}
<h3>List Products</h3>
@if (!User.IsInRole("Employee"))
{
	<a class="btn btn-primary" asp-action="Create" asp-controller="Product">Add Product</a>

}
<table class="table" id="myTable">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Product Name</th>
			<th scope="col">Product Quantity</th>
			<th scope="col">Product Sold</th>
			<th scope="col">Product Description</th>
			<th scope="col">Product Price</th>
			<th scope="col">Product Image</th>
			<th scope="col">Product Category</th>
			<th scope="col">Product Brand</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.Name</td>
				<td class="text-center">
					<div class="d-flex flex-column justify-content-center align-items-center">
						<div>@item.Quantity</div>
						<a class="btn btn-primary mt-2" asp-controller="Product" asp-action="AddQuantity" asp-route-id="@item.Id">Add Quantity</a>
						<a class="btn btn-danger mt-2" asp-controller="Product" asp-action="DecreaseQuantity" asp-route-id="@item.Id" style="margin-top:5px">Subtract Quantity</a>
					</div>
				</td>
				<td>@item.Sold</td>
				<td>@Html.Raw(@item.Description)</td>
				<td>@item.Price.ToString("#,##0 VND")</td>
				<td><img src="~/media/products/@item.Image" width="120" height="150px" /></td>
				<td>@(item.Category?.Name ?? "No Category")</td>
				<td>@(item.Brand?.Name ?? "No Brand")</td>

				@if (!User.IsInRole("Employee"))
				{ // nhan vien khong duoc xoa, sua san pham
					<td>
						<a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Edit</a>
					<a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-route-Id="@item.Id">Delete</a>
					</td>
				}
				else
				{
					<td>None</td>
				}
			</tr>
		}
	</tbody>

</table>
