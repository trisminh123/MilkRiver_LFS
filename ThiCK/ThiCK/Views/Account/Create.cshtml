@model UserModel
@{
	ViewData["Title"] = "Register User";
}
<section id="signup-section">
    <!--form-->
    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="signup-form position-relative">
            <!--sign up form-->
            <h2>Đăng ký tài khoản</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Create" asp-controller="Account">
                <div class="form-group">
                    <label>Username</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger" />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>

                <!-- Form nội dung -->
                <button class="btn btn-default position-absolute submit-button">Đăng ký</button>
            </form>
        </div>
    </div>
</section>

<style>
    /* Toàn bộ section */
    #signup-section {
        height: 100vh; /* Chiều cao toàn màn hình */
        display: flex;
        justify-content: center; /* Căn giữa ngang */
        align-items: center; /* Căn giữa dọc */
        background-color: #f8f9fa; /* Màu nền nhạt */
    }

    .signup-form {
        background: #ffffff;
        padding: 40px 30px 80px; /* Thêm khoảng cách dưới form */
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        width: 1000px;
        max-width: 400px; /* Chiều rộng tối đa */
        position: relative; /* Đặt thành phần con sử dụng `position` */
    }

    /* Nút đăng ký */
    .submit-button {
        bottom: 30px; /* Tạo khoảng cách giữa nút và cạnh dưới */
        right: 20px;
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .submit-button:hover {
            background-color: #0056b3;
        }

    .position-absolute {
        position: absolute; /* Đặt vị trí tuyệt đối */
    }
</style>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");

	}

}
